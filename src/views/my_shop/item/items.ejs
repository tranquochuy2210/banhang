<%- include ('../../partials/header') %>

<div class="fluid-container py-3 bg-light row">
    <%-include ('../sidebar') %>
    <div class="col-9 bg-white border-3 p-5">
        <h1>my shop</h1>
        <div>
            <p class="text-danger" id="error"></p>
        </div>
        <div class="row">
            <%items.forEach((item)=>{%>
                <div class="card mx-4 col-md-3" >                   
                    <img src="<%=item.images[0]%>" class="card-img-top" height="250px">
                    <div class="card-body">
                      <h5 class="card-title"><%=item.name%></h5>
                      <p class="text-danger">đã bán: <%= item.sold %></p>
                      <p>còn lại: <%= item.stock %></p>
                      <a href="/my-shop/edit-item/<%=item.id%>" class="btn btn-primary">chỉnh sửa</a>
                    </div>
                </div>
            <%})%>
        </div>
    </div>
</div>
<%- include ('../../partials/footer') %>
